<div class="container">
	<div class="row">
		<div class="col-md-3">
			<%= render 'layouts/navbar' %>
		</div>
		<div class="col-xs-12 col-md-9">
			<div class="text-center"><h1><%= translate @name %></h1></div>
			<% @items.each do |x| %>
				<a href="/item/<%= x[:id] %>">
					<figure class="col-xs-6 col-md-3">
						<figcaption><%= x[:name] %><br/><%= x[:price] %> тенге</figcaption>
						<%= image_tag x[:link] %>
						<figcaption><%= x[:rate] %>/10</figcaption>
					</figure>
				</a>
			<% end %>
			<div class="flickr_pagination col-md-12">
				<%= will_paginate @tmp, :page_links => false %>
			</div>	
		</div>
	</div>
</div>
