<script src="https://use.fontawesome.com/476a805558.js"></script>
<div class="col-md-4 col-md-offset-4">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Войти как покупатель</h3>
    </div>
    <div id="existing-customer" class="panel-body" data-hook="login">
      <% if @error %>
        <div class="alert alert-danger">
          <%= @error %>
        </div>
      <% end %>
      
      <%= form_tag "/login", method: :post do %>
        <fieldset id="password-credentials">
          <div class="form-group">
            <input class="form-control" tabindex="1" placeholder="Электронная почта" type="email" name="session[email]"/>
          </div>
          <div class="form-group">
            <input class="form-control" tabindex="2" placeholder="Пароль" type="password" name="session[password]"/>
          </div>
          <div class="checkbox">
              <input name="session[remember_me]" type="hidden" value="0" />
              <input type="checkbox" id="remember_me" value="1" name="session[remember_me]"/>
              <label for="remember_me">Запомнить меня</label>
          </div>
          <%= submit_tag("Войти", class: 'btn btn-inverse btn-large btn-block') %>
        </fieldset>
      <% end %>
      <div class="text-center">
        или 
        <a href="/signup">Создать новую учетную запись</a> |
        <a href="<%= new_password_reset_path %>">Забыли пароль?</a>
      </div>
    </div>
  </div>
</div>